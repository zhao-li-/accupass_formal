.form
  .text-left
    %h4 重置密码
  .text-right
    =link_to "用户登录",login_path
  %br
  =form_for :user, url: '/post_forget_first' do |f|
    .input-group(style="width:100%" )
      %span.input-group-addon(style="width:25%" )
        账号
      =f.text_field :user_name, :class => 'form-control',:placeholder => '请输入账号名'
    %br
    - if flash[:error]
      .alert.alert-danger
        =flash.now[:error]
    %br
    =f.submit '下一步',:class => 'btn-local'