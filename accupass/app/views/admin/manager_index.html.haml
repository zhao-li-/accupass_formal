.panel.panel-default
  .panel-heading
    %h3.panel-title
      用户管理
      %button.btn.btn-default(style="margin-left:25px" )
        +添加用户
  %table.table
    %thead
      %tr
        %th
        %th 编号
        %th 用户名
        %th
        %th 操作
    %tbody
      - @users.each do |user|
        %tr
          %td
          %td
            =user.id - 31
          %td
            =user.user_name
          %th
          %td
            =link_to "删除"
            =link_to "修改密码"
.text-right
  = will_paginate @users, :previous_label=>'&laquo',:next_label=>'&raquo'