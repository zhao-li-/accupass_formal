%ol.breadcrumb
  %li
    =link_to "首页",manager_index_path
  %li.active 修改用户密码
.form
  %br
  =form_tag "/change_password" do
    .input-group(style="width:100%" )
      %span.input-group-addon(style="width:25%" )
        账号
      =label_tag :user_name,params[:user_name], :class => 'name form-control '
    %br
    .input-group(style="width:100%" )
      %span.input-group-addon(style="width:25%" )
        请设置密码
      =password_field_tag :password,params[:password], :class => 'form-control',:placeholder => '请输入新密码'
    %br
    .input-group(style="width:100%" )
      %span.input-group-addon(style="width:25%" )
        请确认密码
      =password_field_tag :password,params[:password], :class => 'form-control',:placeholder => '请再次输入'
    %br
      - if @user.errors.any?
        .alert.alert-danger
          =@user.errors.full_messages.first
    =submit_tag '确认修改',:class => 'btn-local'